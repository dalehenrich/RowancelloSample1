options
{
	SuperDoitRequiredOptionWithRequiredArg long: 'sourceFile' .
	SuperDoitRequiredOptionWithRequiredArg long: 'resultsFile' .
	SuperDoitOptionalOptionWithNoArg long: 'inspect' .
}
